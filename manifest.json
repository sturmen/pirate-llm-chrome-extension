{
    "manifest_version": 3,
    "name": "Pirate Rewriter",
    "version": "1.2",
    "description": "Rewrites article text on web pages in a pirate voice using a local LLM. Click the button on the page to activate.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "http://localhost/*",
      "http://127.0.0.1/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/pirate-flag.svg"],
        "matches": ["<all_urls>"]
      }
    ]
  }